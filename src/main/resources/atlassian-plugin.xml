<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n routes -->
    <resource type="i18n" name="i18n" location="abtesting"/>
    
    <!-- add our web resources -->
    <web-resource key="abtesting-resources" name="abtesting Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <dependency>com.atlassian.soy.soy-template-plugin:soy-deps</dependency>

        <transformation extension="soy">
            <transformer key="soyTransformer">
                <functions>com.atlassian.confluence.plugins.soy:soy-core-functions</functions>
            </transformer>
        </transformation>

        <resource type="download" name="abtesting.css" location="/css/abtesting.css"/>
        <resource type="download" name="abtesting.js" location="/js/abtesting.js"/>
        <resource type="download" name="images/" location="/images"/>

        <resource type="soy" name="featurebattle.soy" location="/templates/featurebattle.soy"/>
        <context>abtesting</context>
    </web-resource>

    <ao key="ao-module" namespace="Hyper-AO-module">
        <description>The module configuring the Active Objects service used by this plugin</description>
        <entity>fi.ambientia.abtesting.infrastructure.repositories.persistence.ABTestAo</entity>
    </ao>


    <xhtml-macro name="display-feature-battle"
                 class="fi.ambientia.atlassian.macro.experiments.DisplayFeatureBattle" key="display-feature-battle-xhtml-macro">
        <description>
            Displays list of user links
        </description>
        <parameters>
            <parameter name="Name" type="string" />
        </parameters>
    </xhtml-macro>


    <web-item key="myLink" section="index.links" weight="40" application="refapp">
        <label key="My Link Name or I18n Key"/>
        <link linkId="myLinkId">/relative/or/absolute/path/to/my/link</link>
    </web-item>

</atlassian-plugin>